# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for text files
*.php text eol=lf
*.js text eol=lf
*.css text eol=lf
*.html text eol=lf
*.blade.php text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.txt text eol=lf

# Force CRLF line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.zip binary
*.tar.gz binary
*.rar binary
*.7z binary

# Laravel specific
/vendor/ export-ignore
/node_modules/ export-ignore
/storage/app/ export-ignore
/storage/framework/cache/ export-ignore
/storage/framework/sessions/ export-ignore
/storage/framework/views/ export-ignore
/storage/logs/ export-ignore
/bootstrap/cache/ export-ignore
/public/hot export-ignore
/public/storage export-ignore
.env export-ignore
.env.backup export-ignore
.env.production export-ignore
.env.local export-ignore
.env.*.local export-ignore
